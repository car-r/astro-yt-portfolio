---
export interface Props {
	title: string;
	href: string;
}

const { href, title } = Astro.props;
---

<a href={href}>
    <div 
    class={`flex items-center gap-6 py-2 px-3 rounded-lg hover:bg-neutral-200/60 ${Astro.url.pathname.includes(href) ? ' bg-neutral-200/60' : ''} `}
    >
        <slot />
        <p class="">{title}</p>
    </div>
</a>